# Database Configuration
POSTGRES_DB=pythmata
POSTGRES_USER=pythmata
POSTGRES_PASSWORD=pythmata
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Script Execution
SCRIPT_TIMEOUT=30
SCRIPT_MAX_MEMORY_MB=128
ALLOWED_MODULES=os,sys,json,datetime,math,random

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Storage Configuration
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_TYPES=.bpmn,.xml,.json

# Cache Configuration
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true

# Development Settings
NODE_ENV=development
VITE_DEV_SERVER_PORT=3000
ENABLE_SWAGGER=true
CORS_ALLOW_ORIGINS=http://localhost:3000
ENABLE_DEBUG_TOOLBAR=false

# LLM Configuration (AISuite)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Uncomment and set these if needed for other providers
# AZURE_API_KEY=your-azure-api-key-here
# AZURE_API_VERSION=2023-05-15
# AZURE_ENDPOINT=https://your-azure-endpoint.openai.azure.com
# GOOGLE_API_KEY=your-google-api-key-here
